<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- 50% = идеально круг -->
    </style>

    <!-- Общий стиль для TextInputLayout -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/fill_soft</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColorHint">@color/text_primary</item>
    </style>

    <!-- Общий стиль для кнопки "Log in" -->
    <style name="Widget.App.LoginButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">327dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="elevation">10dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/brand_red</item>
        <item name="rippleColor">@color/brand_red_ripple</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AvatarImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <resources>

        <!-- Стиль карточки еды -->
        <style name="FoodCardStyle" parent="Widget.MaterialComponents.CardView">
            <item name="cardCornerRadius">20dp</item>
            <item name="cardUseCompatPadding">true</item>
            <item name="cardBackgroundColor">@android:color/holo_red_dark</item>
            <item name="android:layout_margin">8dp</item>
        </style>

        <!-- Заголовок (название еды) -->
        <style name="FoodTitleText">
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@android:color/white</item>
        </style>

        <!-- Цена -->
        <style name="FoodPriceText">
            <item name="android:textSize">20sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@android:color/white</item>
        </style>

        <!-- Рейтинг -->
        <style name="FoodRatingBar" parent="@android:style/Widget.RatingBar.Small">
            <item name="android:numStars">5</item>
            <item name="android:stepSize">1</item>
            <item name="android:isIndicator">true</item>
            <item name="android:progressTint">@android:color/holo_orange_light</item>
        </style>

    </resources>


</resources>